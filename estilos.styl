body
	font-size 16px
	background #dfd8d8
	height 1000px

a
	text-decoration none
 
ul
  padding 0
  margin 0
  list-style none 

header
	max-width 1200px
	background #2359A1
	padding .4em 0
	#nav1
		position fixed 
		bottom 0
		width 100%
		background white
		border-top 1px solid gray
		ul
			font-size 0
		.item-nav
			width 50px
			display inline-block
			font-size 1rem
			border-right 1px solid #C7D3D8 
			padding 0 .4em
			list-style none	
			&:first-child
				border-left 0px
			&:last-child
				border-right 0px
          
	
			.font-img
				font-size 1.6em
				color #2359A1
				margin-top .2em 
			
			
	#nav2
		position absolute
		top 0
		right 0
		margin 0.5em
		border-radius 50%
		
		a
			color white
			font-size 1.5em
		
	input
		padding .3em
		font-size 1em
		margin 0 auto
		width 225px
		display block
		border-radius .4em
		border 0px
		

.canvas_menu
  background #fff
  width 17em
  position fixed
  top 0
  left -19em
  transition .4s
  box-shadow 1px 1px 20px #333
  border-radius 0 0 .5em 0
  .canvas-item
    background #eee
    border 1 solid #eee
    margin .4em
    border-radius .3em
    a
      padding .3em 1em
      display block
      font-size 1.1em
      color #2359A1
  #info-usuario
    width 100%
    margin 0
    padding .5em 0
    top 0
    background #2359A1
    position relative
    h3
      color white
      margin 0
      margin-left .3em
    #logo-usuario
      position absolute
      right 0
      top 0
      margin 0
      margin-right 1em
      
      img
        
        border 1px solid transparent
        border-radius 50%

.menu-mostrado
  left 0em 
  
.is-active
  display block
  
.not-active
  display none

.centrar-texto
	text-align center
	
.centrar-caja
	margin 0 auto


